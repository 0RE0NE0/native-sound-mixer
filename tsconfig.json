{
	"compilerOptions": {
		"target": "ES5",
		"module": "commonjs",
		"rootDir": "src",
		"outDir": "dist",
		"allowJs": false,
		"strict": true,
		"declaration": true,
		"sourceMap": true,
		"declarationDir": "./dist/@types/",
	},
	"include": [
		"./src/*.ts"
	],
	"exclude": [
		"node_modules",
		"test/**",
		"**/*.spec.ts",
		"**/*.test.ts"
	]
}