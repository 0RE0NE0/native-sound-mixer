{
	"compilerOptions": {
		"lib": ["es5", "es6", "es2020", "esnext"],
		"module": "es6",
		"target": "es6",
		"moduleResolution": "node",
		"outDir": "./dist",
		"baseUrl": "./src",
		"esModuleInterop": true,
		"declaration": true,
		"declarationMap": true,
		"inlineSourceMap": true,
		"inlineSources": true
	},
	"exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "test/*"],
	"include": ["./src/**/*.ts"] 

}
